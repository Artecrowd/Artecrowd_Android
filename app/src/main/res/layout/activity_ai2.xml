<?xml version="1.0" encoding="utf-8"?>
<!-- Auto layout, variables, and unit scale are not yet supported -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_sma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/text_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="AI공학관-2층"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/btn_reload"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/reload" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/line_3" />

    <LinearLayout
        android:id="@+id/layout_announce"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line_1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/announce_use"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/rec_use" />

        <TextView
            android:id="@+id/text_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="사용중"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/announce_unuse"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/rec_unuse" />

        <TextView
            android:id="@+id/text_unuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="미사용중"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/layout_announce"
        android:background="@drawable/line_3" />

    <RelativeLayout
        android:id="@+id/layout_artechne"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_below="@id/line_2"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_layout">

        <ImageView
            android:id="@+id/backward_right"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/border_table"/>

        <ImageView
            android:id="@+id/table_backward_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/backward_right"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_forward_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:layout_toStartOf="@id/table_backward_1"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_backward_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/table_backward_1"
            android:layout_toStartOf="@id/backward_right"
            android:layout_marginBottom="40dp"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_forward_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@id/table_forward_1"
            android:layout_toStartOf="@id/table_backward_2"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_backward_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/table_backward_2"
            android:layout_toStartOf="@id/backward_right"
            android:layout_marginBottom="40dp"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_forward_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@id/table_forward_2"
            android:layout_toStartOf="@id/table_backward_3"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_backward_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/table_backward_3"
            android:layout_toStartOf="@id/backward_right"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_forward_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@id/table_forward_3"
            android:layout_toStartOf="@id/table_backward_3"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/backward_bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/border_table"/>

        <ImageView
            android:id="@+id/table_bottom_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_above="@id/backward_bottom"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_bottom_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_above="@id/backward_bottom"
            android:layout_toEndOf="@id/table_bottom_1"
            android:src="@drawable/border_table" />

        <ImageView
            android:id="@+id/table_bottom_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_above="@id/backward_bottom"
            android:layout_toEndOf="@id/table_bottom_2"
            android:src="@drawable/border_table" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_artechne"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="현재 시간"
        android:textColor="#A2A2A2"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/image_blue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_time"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:background="@drawable/blue" />

    <ImageView
        android:id="@+id/image_green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_time"
        android:layout_marginTop="30dp"
        android:layout_marginStart="115dp"
        android:visibility="gone"
        android:background="@drawable/green" />

    <ImageView
        android:id="@+id/image_yellow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_time"
        android:layout_marginTop="30dp"
        android:layout_marginStart="185dp"
        android:visibility="gone"
        android:background="@drawable/yellow" />

    <ImageView
        android:id="@+id/image_orange"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_time"
        android:layout_marginTop="30dp"
        android:layout_marginStart="255dp"
        android:visibility="gone"
        android:background="@drawable/orange" />

    <ImageView
        android:id="@+id/image_red"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_time"
        android:layout_marginTop="30dp"
        android:layout_marginStart="325dp"
        android:visibility="gone"
        android:background="@drawable/red" />

    <ImageView
        android:id="@+id/image_congestion"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/text_time"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/congestion_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/image_congestion"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_congestion_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도는 "
            android:layout_below="@id/image_congestion"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/text_congestion_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 보통 "
            android:layout_toLeftOf="@id/text_congestion_start"
            android:layout_below="@id/image_congestion"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/text_congestion_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다."
            android:layout_toLeftOf="@id/text_congestion_main"
            android:layout_below="@id/image_congestion"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>
</RelativeLayout>